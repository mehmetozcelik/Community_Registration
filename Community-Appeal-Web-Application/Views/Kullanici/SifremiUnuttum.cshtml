
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content="">
    <meta name="author" content="yazar">
    <link rel="shortcut icon" href="/Content/img/favicon.png">

    <title>Düzce Üniversitesi</title>

    <!-- Bootstrap core CSS -->
    <link href="/Content/css/bootstrap.min.css" rel="stylesheet">
    <link href="/Content/css/bootstrap-reset.css" rel="stylesheet">
    <!--external css-->
    <link href="/Content/assets/font-awesome/css/font-awesome.css" rel="stylesheet" />
    <!-- Custom styles for this template -->
    <link href="/Content/css/style.css" rel="stylesheet">
    <link href="/Content/css/style-responsive.css" rel="stylesheet" />

    <!-- HTML5 shim and Respond.js IE8 support of HTML5 tooltipss and media queries -->
    <!--[if lt IE 9]>
    <script src="js/html5shiv.js"></script>
    <script src="js/respond.min.js"></script>
    <![endif]-->
</head>

<body class="login-body">

    <div class="container">

        <form class="form-signin" method="post" action="/Kullanici/SifremiUnuttum">
            <h2 class="form-signin-heading">Şifre Yenileme</h2>
            <div class="login-wrap">
                @if (ViewBag.Hata != null)
                {
                    <div class="alert-danger" style="padding:5px; margin:5px;border-radius:5px;text-align:center;">
                        <b>@ViewBag.Hata</b>
                    </div>
                }
                @if (ViewBag.Basarili != null)
                {
                    <div class="alert-danger" style="padding:5px; margin:5px;border-radius:5px;text-align:center;">
                        <b>@ViewBag.Basarili</b>
                    </div>
                }
                @if (ViewBag.Basarisiz != null)
                {
                    <div class="alert-danger" style="padding:5px; margin:5px;border-radius:5px;text-align:center;">
                        <b>@ViewBag.Basarisiz</b>
                    </div>
                }
                <input name="mail" type="text" class="form-control" placeholder="Öğrenci Mail" autofocus required>
                <button type="submit" class="btn btn-success btn-block">Şifremi Gönder</button>
                <a class="btn btn-default btn-block" style="color:white;" href="/Kullanici/Login">Giriş Yap</a>
            </div>

        </form>

    </div>

    <!-- js placed at the end of the document so the pages load faster -->
    <script src="/Content/js/jquery.js"></script>
    <script src="/Content/js/bootstrap.min.js"></script>


</body>
</html>
