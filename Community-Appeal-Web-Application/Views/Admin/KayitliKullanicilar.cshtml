
@{
    ViewBag.Title = "KayitliKullanicilar";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


@using Community_Appeal_Web_Application.Models

@model List<Kullanici>

<div class="row">
    <div class="col-lg-12">
        <section class="panel">
            <header class="panel-heading">
                Üye Listesi
            </header>
            <table class="table table-striped table-advance table-hover">
                <thead>
                    <tr>
                        <th>Adı Soyadı</th>
                        <th>Mail Adresi</th>
                        <th>Öğrenci Numarası</th>
                        <th>Öğrenci T.C.</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.adi @item.soyadi</td>
                            <td>@item.ogrMail</td>
                            <td>@item.ogrNo</td>
                            <td>@item.tc</td>
                        </tr>
                    }
                </tbody>
            </table>
        </section>
    </div>
</div>


