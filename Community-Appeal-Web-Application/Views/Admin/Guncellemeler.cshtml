
@{
    ViewBag.Title = "Guncellemeler";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

@using Community_Appeal_Web_Application.Models

@model List<Guncelle>

<div class="row">
    <div class="col-lg-12">
        <section class="panel">
            <header class="panel-heading">
                Gelen Güncellemeler
            </header>
            <table class="table table-striped table-advance table-hover">
                <thead>
                    <tr>
                        

                        <th>Güncelleme</th>
                        <th>Topluluk Adı</th>
                        <th>Topluluk Başkanı</th>
                        <th>Kuruluş Tarihi</th>
                        <th style="float:right;">Formlar</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                    <tr>
                        <td>
                            <a href="/Kullanici/GuncelleAdmin/@item.Kullanici.ID" title="Güncellemeye Git" style="float:left;margin-left:5px;" class="btn btn-warning btn-xs"><i class="icon-long-arrow-right"> Git</i></a>
                            <a href="/Admin/guncelleKapat/@item.ID" title="Kapat" style="float:left;margin-left:5px;" class="btn btn-danger btn-xs">  Kapat <i class="icon-remove-sign"></i></a>

                        </td>
                        <td>@item.toplulukAdi</td>
                        <td>@item.baskanAdi @item.baskanSoyadi</td>
                        <td>@item.kurulusTarihi.Value.Day / @item.kurulusTarihi.Value.Month / @item.kurulusTarihi.Value.Year</td>
                        <td>
                            <a href="/Print/GForm8_admin/@item.ID" target="_blank" title="Form 5" style="float:right;margin-right:5px;" class="btn btn-primary btn-xs"><i class="icon-print"> Form 5.1</i></a>
                            <a href="/Print/GForm7_admin/@item.ID" target="_blank" title="Form 5" style="float: right; margin-right: 5px;" class="btn btn-primary btn-xs"><i class="icon-print"> Form 5</i></a>
                            <a href="/Print/GForm4_admin/@item.ID" target="_blank" title="Form 4" style="float: right; margin-right: 5px;" class="btn btn-primary btn-xs"><i class="icon-print"> Form 4</i></a>
                            <a href="/Print/GForm3_admin/@item.ID" target="_blank" title="Form 3" style="float: right; margin-right: 5px;" class="btn btn-primary btn-xs"><i class="icon-print"> Form 3</i></a>
                            <a href="/Print/GForm2_admin/@item.ID" target="_blank" title="Form 2" style="float: right; margin-right: 5px;" class="btn btn-primary btn-xs"><i class="icon-print"> Form 2</i></a>
                            <a href="/Print/GForm1_admin/@item.ID" target="_blank" title="Form 1" style="float: right; margin-right: 5px;" class="btn btn-primary btn-xs"><i class="icon-print"> Form 1</i></a>
                        </td>
                    </tr>
                    }
                </tbody>
            </table>
        </section>
    </div>
</div>

