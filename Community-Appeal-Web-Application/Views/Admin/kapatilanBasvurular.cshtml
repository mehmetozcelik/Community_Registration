
@{
    ViewBag.Title = "Basvurular";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
@using Community_Appeal_Web_Application.Models

@model List<Basvuru>

<div class="row">
    <div class="col-lg-12">
        <section class="panel">
            <header class="panel-heading">
                Kapatılan Başvurular
            </header>
            <table class="table table-striped table-advance table-hover">
                <thead>
                    <tr>
                        <th>Başvuru</th>
                        <th>Topluluk Adı</th>
                        <th>Topluluk Başkanı</th>
                        <th>Kuruluş Tarihi</th>
                        <th style="float:right;">Formlar</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                <a href="/Kullanici/BasvuruAdmin/@item.Kullanici.ID" title="Başvuruya Git" style="float:left;margin-left:5px;" class="btn btn-warning btn-xs">  Git <i class="icon-long-arrow-right"></i></a>
                            </td>
                            <td>@item.toplulukAdi</td>
                            <td>@item.baskanAdi @item.baskanSoyadi</td>
                            <td>@item.kurulusTarihi.Value.Day / @item.kurulusTarihi.Value.Month / @item.kurulusTarihi.Value.Year</td>
                            <td>
                                <a href="/Print/Form8_admin/@item.ID" target="_blank" title="Form 6" style="float:right;margin-right:5px;" class="btn btn-primary btn-xs"><i class="icon-print"> Form 7.1</i></a>
                                <a href="/Print/Form7_admin/@item.ID" target="_blank" title="Form 6" style="float: right; margin-right: 5px;" class="btn btn-primary btn-xs"><i class="icon-print"> Form 7</i></a>
                                <a href="/Print/Form6_admin/@item.ID" target="_blank" title="Form 6" style="float: right; margin-right: 5px;" class="btn btn-primary btn-xs"><i class="icon-print"> Form 6</i></a>
                                <a href="/Print/Form5_admin/@item.ID" target="_blank" title="Form 5" style="float: right; margin-right: 5px;" class="btn btn-primary btn-xs"><i class="icon-print"> Form 5</i></a>
                                <a href="/Print/Form4_admin/@item.ID" target="_blank" title="Form 4" style="float: right; margin-right: 5px;" class="btn btn-primary btn-xs"><i class="icon-print"> Form 4</i></a>
                                <a href="/Print/Form3_admin/@item.ID" target="_blank" title="Form 3" style="float: right; margin-right: 5px;" class="btn btn-primary btn-xs"><i class="icon-print"> Form 3</i></a>
                                <a href="/Print/Form2_admin/@item.ID" target="_blank" title="Form 2" style="float: right; margin-right: 5px;" class="btn btn-primary btn-xs"><i class="icon-print"> Form 2</i></a>
                                <a href="/Print/Form1_admin/@item.ID" target="_blank" title="Form 1" style="float: right; margin-right: 5px;" class="btn btn-primary btn-xs"><i class="icon-print"> Form 1</i></a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </section>
    </div>
</div>

