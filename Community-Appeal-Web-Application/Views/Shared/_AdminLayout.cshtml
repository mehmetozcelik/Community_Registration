@using Community_Appeal_Web_Application.Models

@{
    Admin user = (Admin)Session["Admin"];
}

@using Community_Appeal_Web_Application.App_Classes

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content="">
    <link rel="shortcut icon" href="/Content/img/favicon.png">

    <title>Düzce Üniversitesi</title>

    <!-- Bootstrap core CSS -->
    <link href="/Content/css/bootstrap.min.css" rel="stylesheet">
    <link href="/Content/css/bootstrap-reset.css" rel="stylesheet">
    <!--external css-->
    <link href="/Content/assets/font-awesome/css/font-awesome.css" rel="stylesheet" />
    <link href="/Content/assets/jquery-easy-pie-chart/jquery.easy-pie-chart.css" rel="stylesheet" type="text/css" media="screen" />
    <link rel="stylesheet" href="/Content/css/owl.carousel.css" type="text/css">
    <!-- Custom styles for this template -->
    <link href="/Content/css/style.css" rel="stylesheet">
    <link href="/Content/css/style-responsive.css" rel="stylesheet" />

    @RenderSection("head", false)
</head>

<body>

    <section id="container">
        <!--header start-->
        <header class="header white-bg">
            <div class="sidebar-toggle-box">
                <div data-original-title="Toggle Navigation" data-placement="right" class="icon-reorder tooltips"></div>
            </div>
            <div class="sidebar-toggle-box" style="margin-top:10px;">

                <img src="~/Content/img/duLogo.png" width="40px" />
            </div>
            <!--logo start-->
            <!--logo end-->

            <div class="top-nav ">
                <!--search & user info start-->
                <ul class="nav pull-right top-menu" style="margin-top:5px;">

                    <!-- user login dropdown start-->

                    @{
                        if (BasvuruVeGuncelle.guncelleStatus == true)
                        {

                            <a href="/Kullanici/GuncelleAdminCikis" class="btn btn-warning">Açık Güncellemeyi Kapat <i class="icon-power-off (alias)"></i></a>
                        }
                        if (BasvuruVeGuncelle.basvuruStatus == true)
                        {


                            <a href="/Kullanici/BasvuruAdminCikis" class="btn btn-warning">Açık Başvuruyu Kapat <i class="icon-power-off (alias)"></i></a>
                        }
                    }
                    <a href="#" class="btn btn-default">@user.adi @user.soyadi</a>
                    <a href="/Admin/CikisYap" class="btn btn-danger">Çıkış Yap <i class="icon-arrow-right"></i></a>
                    <!-- user login dropdown end -->
                </ul>
                <!--search & user info end-->
            </div>
        </header>
        <!--header end-->
        <!--sidebar start-->
        <aside>
            <div id="sidebar" class="nav-collapse " style="z-index:2">
                <!-- sidebar menu start-->
                <ul class="sidebar-menu" id="nav-accordion">
                    <li>
                        <a class="active" href="/Admin/Index">
                            <i class="icon-dashboard"></i>
                            <span>Anasayfa</span>
                        </a>
                    </li>

                    <li class="sub-menu">
                        <a href="/Content/javascript:;">
                            <i class="icon-laptop"></i>
                            <span>Yönetici İşlemleri</span>
                        </a>
                        <ul class="sub">
                            <li><a href="/Admin/Listesi">Admin Listesi</a></li>
                            <li><a href="/Admin/Ekle">Admin Ekle</a></li>
                        </ul>
                    </li>
                    <li class="sub-menu">
                        <a href="/Content/javascript:;">
                            <i class="icon-file-text-alt"></i>
                            <span>Başvuru İşlemleri</span>
                        </a>
                        <ul class="sub">
                            <li><a href="/Admin/Basvurular">Evrakları Tamamlananlar</a></li>
                            <li><a href="/Admin/kapatilanBasvurular">Onaylanan Başvurular</a></li>
                            <li><a href="/Admin/tamamlanmayanBasvurular">Yarım Başvurular</a></li>
                        </ul>
                    </li>
                    <li class="sub-menu">
                        <a href="/Content/javascript:;">
                            <i class="icon-exchange"></i>
                            <span>Güncelleme İşlemleri</span>
                        </a>
                        <ul class="sub">
                            <li><a href="/Admin/Guncellemeler">Tamamlanan Güncellemeler</a></li>
                            <li><a href="/Admin/kapatilanGuncellemeler">Kapatılan Güncellemeler</a></li>
                            <li><a href="/Admin/tamamlanmayanGuncellemer">Diger Guncellemeler</a></li>
                        </ul>
                    </li>

                    <li>
                        <a href="/Admin/KayitliKullanicilar">
                            <i class=" icon-user"></i>
                            <span>Kayıtlı Kullanıcılar </span>
                        </a>
                    </li>

                    @{
                        if (BasvuruVeGuncelle.guncelleStatus == true)
                        {
                            <li class="sub-menu">
                                <a href="/Content/javascript:;">
                                    <i class="icon-book"></i>
                                    <span>Güncelleme</span>
                                </a>
                                <ul class="sub">
                                    <li><a href="/Guncelle/form1">Form 1</a></li>
                                    <li><a href="/Guncelle/form2">Form 2</a></li>
                                    <li><a href="/Guncelle/form3">Form 3</a></li>
                                    <li><a href="/Guncelle/form4">Form 4</a></li>
                                    <li><a href="/Guncelle/form5">Form 5</a></li>
                                    <li><a href="/Guncelle/form6">Form 6</a></li>
                                    <li><a href="/Guncelle/form7">Form 7</a></li>
                                </ul>
                            </li>
                        }
                        if (BasvuruVeGuncelle.basvuruStatus == true)
                        {

                            <li class="sub-menu">
                                <a href="/javascript:;">
                                    <i class="icon-laptop"></i>
                                    <span>Başvuru</span>
                                </a>
                                <ul class="sub">
                                    <li><a href="/Home/form1">Form 1</a></li>
                                    <li><a href="/Home/form2">Form 2</a></li>
                                    <li><a href="/Home/form3">Form 3</a></li>
                                    <li><a href="/Home/form4">Form 4</a></li>
                                    <li><a href="/Home/form5">Form 5</a></li>
                                    <li><a href="/Home/form6">Form 6</a></li>
                                    <li><a href="/Home/form7">Form 7</a></li>
                                    <li><a href="/Home/form8">Form 8</a></li>
                                    <li><a href="/Home/basvuruTamamla">Başvuru Tamamlama</a></li>
                                </ul>
                            </li>
                        }
                    }

                    <!--multi level menu end-->

                </ul>
                <!-- sidebar menu end-->
            </div>
        </aside>
        <!--sidebar end-->
        <!--main content start-->
        <section id="main-content">
            <section class="wrapper">

                @RenderBody()


            </section>
        </section>
        <!--main content end-->
        <!--footer start-->
        <footer class="site-footer navbar-fixed-bottom" style="z-index:1">
            <div class="text-center">
                2018 &copy; Düzce Üniversitesi Bilgi İşlem Daire Bağşkanlığı
                <a href="#" class="go-top">
                    <i class="icon-angle-up"></i>
                </a>
            </div>
        </footer>
        <!--footer end-->
    </section>

    <!-- js placed at the end of the document so the pages load faster -->
    <script src="/Content/js/jquery.js"></script>
    <script src="/Content/js/jquery-1.8.3.min.js"></script>
    <script src="/Content/js/bootstrap.min.js"></script>
    <script class="include" type="text/javascript" src="/Content/js/jquery.dcjqaccordion.2.7.js"></script>
    <script src="/Content/js/jquery.scrollTo.min.js"></script>
    <script src="/Content/js/jquery.nicescroll.js" type="text/javascript"></script>
    <script src="/Content/js/jquery.sparkline.js" type="text/javascript"></script>
    <script src="/Content/assets/jquery-easy-pie-chart/jquery.easy-pie-chart.js"></script>
    <script src="/Content/js/owl.carousel.js"></script>
    <script src="/Content/js/jquery.customSelect.min.js"></script>
    <script src="/Content/js/respond.min.js"></script>

    <script class="include" type="text/javascript" src="/Content/js/jquery.dcjqaccordion.2.7.js"></script>

    <!--common script for all pages-->
    <script src="/Content/js/common-scripts.js"></script>

    <!--script for this page-->
    <script src="/Content/js/sparkline-chart.js"></script>
    <script src="/Content/js/easy-pie-chart.js"></script>
    <script src="/Content/js/count.js"></script>

    <!--Angular js-->

    <script src="https://ajax.googleapis.com/ajax/libs/angularjs/1.6.9/angular.min.js"></script>


    <script>

        //owl carousel

        $(document).ready(function () {
            $("#owl-demo").owlCarousel({
                navigation: true,
                slideSpeed: 300,
                paginationSpeed: 400,
                singleItem: true,
                autoPlay: true

            });
        });

        //custom select box

        $(function () {
            $('select.styled').customSelect();
        });

    </script>
    @RenderSection("script", false)

</body>
</html>
